{
  "name": "flourish-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Flourish Plant Care Application - Full Stack",
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\" --names \"API,WEB\" --prefix-colors \"cyan,green\"",
    "dev:api": "cd apps/api && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:web": "npm --prefix apps/web run dev",
    "build": "npm run build:web && npm run build:api",
    "build:web": "npm --prefix apps/web run build",
    "build:api": "cd apps/api && pip install -r requirements.txt",
    "start": "concurrently \"npm run start:api\" \"npm run start:web\" --names \"API,WEB\" --prefix-colors \"cyan,green\"",
    "start:api": "cd apps/api && python -m uvicorn main:app --host 0.0.0.0 --port 8000",
    "start:web": "npm --prefix apps/web run preview",
    "test": "npm run test:api && npm run test:web",
    "test:web": "npm --prefix apps/web run test",
    "test:api": "cd apps/api && python -m pytest",
    "lint": "npm run lint:web",
    "lint:web": "npm --prefix apps/web run lint",
    "install:all": "npm run install:web && npm run install:api",
    "install:web": "npm --prefix apps/web install",
    "install:api": "cd apps/api && pip install -r requirements.txt",
    "clean": "npm run clean:web && npm run clean:api",
    "clean:web": "cd apps/web && rmdir /s /q node_modules dist 2>nul || true",
    "clean:api": "cd apps/api && rmdir /s /q __pycache__ .pytest_cache 2>nul || true"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "workspaces": [
    "apps/*"
  ]
}
